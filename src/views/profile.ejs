<!doctype html>
<html ng-app="ratedMovies" ng-controller="Controller as ctrl">
<head>
	<meta charset="UTF-8">
	<title>Profil</title>
	<!-- Imports -->
	<link rel="stylesheet" href="/node_modules/font-awesome/css/font-awesome.min.css">
	<link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/profile.css">
	<script src="/node_modules/jquery/dist/jquery.min.js"></script>
	<script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="/node_modules/socket.io/node_modules/socket.io-client/dist/socket.io.js"></script>
	<script src="/core/APIRequests/apirequests.js"></script>
	<script src="/node_modules/angular/angular.js"></script>
	<script src="/js/profile.js"></script>
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
	<script type="text/javascript">
			$(document).ready(function() {

				var data="<%= user.local.categories%>";
				//Make an array
				var dataarray=data.split(",");
				for(var i= 0; i < dataarray.length; i++) {
				    dataarray[i] = dataarray[i].charAt(0).toUpperCase() + dataarray[i].slice(1);;
				}
				// Set the value
				if ("<%= user.local.categories%>" === 'undefined' || dataarray.length === 0){
					$("#categories").html('Aucune catégorie sélectionnée');
				} else {
					$("#categories").html(dataarray.join());
				}

			});
	</script>
</head>
<body>

<!------------------------------------------------------- Barre menu ----------------------------------------------------- -->
<!-- --------------------------------------------------------------------------------------------------------------------- -->

		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/home">MoviesBestChoice</a>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li><a href="/home">Accueil</a></li>
						<li class="active"><a href="/profile">Profil</a></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Films recommandés  <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><a href="#">Films recommandés par MoviesBestChoice</a></li>
								<li class="divider"></li>
								<li><a href="#">Films recommandés par amis</a></li>
								<li><a href="#">Films recommandés par un ami</a></li>
								<li class="divider"></li>
								<li><a href="#">Films recommandés par catégorie</a></li>
							</ul>
						</li>
					</ul>
					
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Se déconnecter</a></li>
					</ul>

					
					
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>

<!-- ------------------------------------------------------------ MAIN DIV ----------------------------------------------------- -->

<div class="container">

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-success"><%= message %></div>
	<% } %>

<!-- ------------------------------------------------------------ INFORMATIONS GENERALES --------------------------------------- -->

	<h2><span class="fa fa-user"></span> Informations générales </h2>

	<div class="row">
		<div class="col-sm-12">

			<table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Nom d'utilisateur</td>
                        <td><%= user.local.username %></td>
                      </tr>
                      <!-- <tr>
                        <td>Sexe</td>
                        <td>-</td>
                      </tr>
                      <tr>
                        <td>Date de naissance</td>
                        <td>-</td>
                      </tr>
                      <tr>
                        <td>Adresse</td>
                        <td>-</td>
                      </tr>-->
                      <tr>
                        <td>Email</td>
                        <td><%= user.local.email %></td>
                      </tr>
                      <tr>
                        <td>Catégories préférées</td>
                        <td id="categories"></td>
                      </tr>
                    </tbody>
            </table>
                  
			<a href="/configure"><button type="submit" class="btn btn-primary pull-right">Modifier le profil</button></a><br><br>
		</div>
	</div>


<!-- ------------------------------------------------------------ FILMS NOTES --------------------------------------- -->

	<legend>
		<h2><span class="fa fa-film"></span> Films notés </h2>
	</legend>

	<div class="row">
		<div class="col-sm-12 well">

				<h2 style="display:none;" id="movies"><%= movies %></h2>

				<h5 id="message">Aucun film noté !</h5>
				
				<div ng-repeat="movie in ctrl.movies" ng-if="$index < ctrl.nbMoviesShown" class="movie col-md-2">
					<div class="btn center-block">
						<a href="./movie/{{movie.id}}">
							<img style="width:100px;" ng-src="https://image.tmdb.org/t/p/w300_and_h450_bestv2/{{movie.poster_path}}" class="poster" />
						</a>
					</div>
					<a class="center-block" href="./movie/{{movie.id}}">
						<h5 class="text-center">{{movie.title}}</h5>
					</a>
				</div>



		</div>
	</div>

</div>
</body>
</html>
